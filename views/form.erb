<h2>Hyphenation</h2>
<p>Test your patterns:</p>

<form action="/test-patterns" method="POST">
  <input type="text" name="word" value="<%= @word %>"></input>
  <input type="submit" value="hyphenate">
  <select name="bcp47">
  <% @languages.each do |language| %>
    <% bcp47 = language.bcp47 %>
    <option<% if @bcp47 == bcp47 %> selected<% end %> value="<%= bcp47 %>">
      <%= bcp47 %>
    </option>
  <% end %>
  </select
</form>
